<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                [%d{yyyy-MM-dd HH:mm:ss}] %-5level [%logger] - %msg%n
            </Pattern>
        </encoder>
    </appender>

    <logger name="akka" level="OFF" />
    <logger name="au.net.hivemedia.quasimodo" level="DEBUG" />

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>